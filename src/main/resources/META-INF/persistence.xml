<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="jpa.unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
        <class>org.zezutom.capstone.domain.GameResult</class>
        <class>org.zezutom.capstone.domain.PlayoffResult</class>
        <class>org.zezutom.capstone.domain.Quiz</class>
        <class>org.zezutom.capstone.domain.QuizRating</class>
        <class>org.zezutom.capstone.domain.UserStats</class>
        <exclude-unlisted-classes />
        <properties>
            <property name="datanucleus.ConnectionURL" value="appengine"/>
            <property name="datanucleus.appengine.ignorableMetaDataBehavior"
                      value="NONE" />
            <property name="datanucleus.appengine.datastoreEnableXGTransactions" value="true"/>
        </properties>
    </persistence-unit>
</persistence>